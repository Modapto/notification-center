{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "EventDto",
  "properties": {
      "eventId": {
          "type": "string",
          "description": "Unique identifier for the event"
      },
      "description": {
          "type": "string",
          "description": "Description of the event"
      },
      "productionModule": {
          "type": "string",
          "description": "Production module associated with the event",
          "minLength": 1
      },
      "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the event in ISO 8601 format"
      },
      "priority": {
          "type": "string",
          "description": "Priority of the message",
          "enum": ["Low", "Mid", "High"]
      },
      "eventType": {
          "type": "string",
          "description": "Type of the event"
      },
      "sourceComponent": {
          "type": "string",
          "description": "Source component of the event"
      },
      "smartService": {
          "type": "string",
          "description": "Smart service associated with the event"
      },
      "topic": {
          "type": "string",
          "description": "Topic of the event"
      },
      "results": {
          "type": ["object", "null"],
          "description": "Results of the event"
      }
  },
  "required": ["productionModule", "topic", "priority"],
  "additionalProperties": false
}